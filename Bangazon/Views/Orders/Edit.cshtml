@model Bangazon.Models.OrderViewModels.OrderEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Payment</h1>

<h4>Select a payment option to complete order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="OrderId" class="form-control" type="Hidden" />

            <div class="form-group">
                <label asp-for="PaymentTypeId" class="control-label">Select a payment Option</label>
                <select asp-for="PaymentTypeId" asp-items="@Model.paymentTypes" class="form-control">
                    <option disabled>Select a payment type</option>
                </select>
                <span asp-validation-for="PaymentTypeId" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input type="submit" value="Complete Order" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-filter="cart">Back to Cart</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
