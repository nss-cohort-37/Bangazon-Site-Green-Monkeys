@model Bangazon.Models.Product

@{
    ViewData["Title"] = "AddToCart";
}

<h1>Add @Model.Title to Cart?</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddToCart">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input hidden asp-for="ProductId" class="form-control" />
            </div>
            
            <div>@Model.Title</div>

            <div>$@Model.Price</div>
            
            <div class="form-group">
                <input type="submit" value="Add to Cart" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Products</a>
</div>

